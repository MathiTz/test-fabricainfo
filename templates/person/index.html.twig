{% extends 'base.html.twig' %}

{% block title %}FabricaInfo - CRUD{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }


    button a {
        color: white;
    }

    button a:hover {
        color: gray;
        text-decoration: none;
    }
</style>


<div class="example-wrapper">
    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert-{{ label }} alert alert-dismissible fade show" role="alert" >
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
        {% if people is not empty %}
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Tipo de Pessoa</th>
                        <th scope="col">Identificador</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Email</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                {% for p in people %}
                    <tr>
                        <td>{{ p.typeperson }}</td>
                        <td>{{ p.identifier }}</td>
                        <td>{{ p.name | slice(0, 20) }}</td>
                        <td>{{ p.email }}</td>
                        <td>
                            <button class="btn btn-danger mb-3">
                                <a href="person/delete/{{ p.id }}">Delete</a>
                            </button>
                            <button class="btn btn-warning">
                                <a href="person/update/{{ p.id }}">Update</a>
                            </button>
                        </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
            <p>No person found.</p>
        {% endif %}
        <br/>
    <button class="btn btn-primary ">
        <a href="person/create">Create New</a>
    </button>
    </div>

{% endblock %}
