{% extends 'base.html.twig' %}

{% block title %}FabricaInfo - CRUD{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
    <div class="container">
        {% if people is not empty %}
        <div class="table-responsive">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Tipo de Pessoa</th>
                        <th scope="col">Identificador</th>
                        <th scope="col">Nome</th>
                    </tr>
                </thead>
                <tbody>
                {% for p in people %}
                    <tr>
                        <th scope="row">{{ p.id }}</th>
                        <td>{{ p.typeperson }}</td>
                        <td>{{ p.identifier }}</td>
                        <td>{{ p.name }}</td>
                        <td><a href="person/delete/{{ p.id }}">Delete</a></td>
                        <td><a href="person/update/{{ p.id }}">Update</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
            <p>No person found.</p>
        {% endif %}
        <br/>
        <a href="person/create">Create New</a>
    </div>
</div>
{% endblock %}
